@article{parvatker2019cradle,
	title        = {Cradle-to-Gate Greenhouse Gas Emissions for Twenty Anesthetic Active Pharmaceutical Ingredients Based on Process Scale-Up and Process Design Calculations},
	author       = {Abhijeet G. Parvatker and Huseyin Tunceroglu and Jodi D. Sherman and Philip Coish and Paul Anastas and Julie B. Zimmerman and Matthew J. Eckelman},
	year         = 2019,
	month        = 4,
	journal      = {ACS Sustainable Chemistry and Engineering},
