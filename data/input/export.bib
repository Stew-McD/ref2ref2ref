@article{caduff2014scaling,
	title        = {Scaling Relationships in Life Cycle Assessment: The Case of Heat Production from Biomass and Heat Pumps},
	author       = {Marloes Caduff and Mark A.J. Huijbregts and Annette Koehler and Hans J\"{o}rg Althaus and Stefanie Hellweg},
	year         = 2014,
